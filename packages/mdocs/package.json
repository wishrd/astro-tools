{
	"name": "@astro-tools/mdocs",
	"version": "1.1.0",
	"description": "CLI for generating a documentation website from markdown files of the execution directory using Astro Starlight under the hood",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wishrd/astro-tools",
		"directory": "packages/mdocs"
	},
	"homepage": "https://astro-tools.pages.dev",
	"keywords": [
		"astro",
		"starlight",
		"withastro",
		"docs",
		"documentation"
	],
	"author": {
		"name": "wishrd"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"files": [
		"template",
		"files"
	],
	"bin": "dist/cli.js",
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
    "template": "tsx scripts/template.ts"
	},
	"type": "module",
	"dependencies": {
		"@astrojs/starlight": "^0.32.2",
		"astro": "^5.4.1",
		"glob": "catalog:",
		"sharp": "^0.32.5",
		"yargs": "catalog:"
	},
	"devDependencies": {
		"create-astro": "catalog:",
		"@types/node": "^20.11.24",
		"@types/yargs": "^17.0.32",
		"tsup": "catalog:",
    "tsx": "^4.19.3",
		"typescript": "^5.3.3"
	}
}
