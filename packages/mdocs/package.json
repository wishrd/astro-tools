{
  "name": "@astro-tools/mdocs",
  "version": "1.5.0",
  "description": "CLI for generating a documentation website from markdown files of the execution directory using Astro Starlight under the hood",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wishrd/astro-tools",
    "directory": "packages/mdocs"
  },
  "homepage": "https://astro-tools.pages.dev/tools/mdocs/",
  "keywords": [
    "astro",
    "starlight",
    "withastro",
    "docs",
    "documentation"
  ],
  "author": {
    "name": "wishrd"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "template",
    "files"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": "dist/cli.js",
  "scripts": {
    "build": "tsup",
    "template": "tsx scripts/template.ts"
  },
  "type": "module",
  "dependencies": {
    "@astrojs/starlight": "^0.32.2",
    "astro": "^5.4.2",
    "glob": "catalog:",
    "sharp": "^0.32.5",
    "yargs": "catalog:"
  },
  "devDependencies": {
    "create-astro": "catalog:",
    "@types/node": "catalog:",
    "@types/yargs": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:"
  }
}
