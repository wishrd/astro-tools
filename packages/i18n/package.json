{
	"name": "@astro-tools/i18n",
	"version": "0.4.0",
	"description": "Type-safe i18n integration for Astro which translates in runtime",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wishrd/astro-tools",
		"directory": "packages/i18n"
	},
	"homepage": "https://astro-tools.pages.dev/internationalization/i18n/",
	"keywords": [
		"astro",
		"withastro",
		"i18n",
		"translations"
	],
	"author": {
		"name": "wishrd"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/types/index.js"
		},
		"./providers": {
			"types": "./dist/providers/index.d.ts",
			"default": "./dist/providers/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup"
	},
	"type": "module",
	"peerDependencies": {
		"astro": "catalog:peer"
	},
	"dependencies": {
		"@astro-tools/transfer-state": "workspace:^",
		"astro-integration-kit": "catalog:",
		"ts-deepmerge": "catalog:"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"astro": "catalog:",
		"tsup": "catalog:"
	}
}
