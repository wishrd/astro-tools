{
	"name": "@astro-tools/i18n",
	"version": "0.1.0",
	"description": "Type-safe i18n integration for Astro which translates in runtime",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wishrd/astro-tools",
		"directory": "packages/i18n"
	},
	"homepage": "https://astro-tools.pages.dev",
	"keywords": [
		"astro",
		"withastro",
		"i18n",
		"translations"
	],
	"author": {
		"name": "wishrd"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/types/index.js"
		},
		"./providers": {
			"types": "./dist/providers/index.d.ts",
			"default": "./dist/providers/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup"
	},
	"type": "module",
	"peerDependencies": {
		"@astro-tools/transfer-state": "^0.2.2",
		"astro": "^4.16.0",
		"astro-integration-kit": "^0.17.0"
	},
	"dependencies": {
		"ts-deepmerge": "^7.0.2"
	},
	"devDependencies": {
		"@astro-tools/transfer-state": "workspace:*",
		"astro": "^4.16.0",
		"astro-integration-kit": "^0.17.0",
		"tsup": "^8.3.5"
	}
}
